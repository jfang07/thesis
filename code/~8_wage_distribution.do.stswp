cd data/cps

set more off

clear
quietly infix             ///
  int     year     1-4    ///
  double  cpsidv   5-19   ///
  double  asecwt   20-30  ///
  byte    age      31-32  ///
  double  incwage  33-40  ///
  using `"cps_00004.dat"'

replace asecwt  = asecwt  / 10000

format cpsidv  %15.0f
format asecwt  %11.4f
format incwage %8.0f

label var year    `"Survey year"'
